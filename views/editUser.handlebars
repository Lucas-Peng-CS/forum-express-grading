<form class="form-signin" action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data" style="width: 100%;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Edit User</h1>
  </div>
  <div class="form-label-group">
    <label for="inputName">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Name" value="{{user.name}}" required autofocus maxlength="20" onkeyup="validateValue (this)"/>
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>
  <br/>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
</form>